{
  "name": "nextjs-starter-kit-2025",
  "scripts": {
    "dev": "bun --env-file=.env.dev run next dev --turbopack",
    "build": "bun --env-file=.env.prod run next build && shx rm -rf docker/standalone && shx cp -r .next/standalone docker/standalone && shx cp -r .next/static docker/standalone/static && shx cp -r public docker/standalone/public",
    "start": "next start",
    "lint": "next lint",
    "addui": "bunx --bun shadcn@latest add",
    "docker:dev": "docker compose --env-file .env.dev -f ./docker/docker-compose.dev.yml up",
    "db:dev:push": "bun --env-file=.env.dev drizzle-kit push",
    "db:dev:seed": "bun --env-file=.env.dev run ./server/script-seed.ts",
    "db:dev:dropall": "bun --env-file=.env.dev run ./server/script-dropall.ts",
    "db:dev:reset": "bun run db:dev:dropall && bun run db:dev:push && bun run db:dev:seed",
    "docker:prod": "docker compose --env-file .env.prod -f ./docker/docker-compose.prod.yml up",
    "db:prod:push": "PG_HOST=localhost bun --env-file=.env.prod drizzle-kit push",
    "db:prod:seed": "PG_HOST=localhost bun --env-file=.env.prod run ./server/script-seed.ts",
    "db:prod:dropall": "PG_HOST=localhost bun --env-file=.env.prod run ./server/script-dropall.ts",
    "db:prod:reset": "bun run db:prod:dropall && bun run db:prod:push && bun run db:prod:seed"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.1.1",
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-dropdown-menu": "^2.1.15",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "better-auth": "^1.2.10",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "drizzle-orm": "^0.44.2",
    "drizzle-seed": "^0.3.1",
    "embla-carousel-react": "^8.6.0",
    "lucide-react": "^0.525.0",
    "nanoid": "^5.1.5",
    "next": "15.3.4",
    "next-intl": "^4.3.1",
    "pg": "^8.16.3",
    "postgres": "^3.4.7",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-hook-form": "^7.59.0",
    "tailwind-merge": "^3.3.1",
    "zod": "^3.25.67"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@tailwindcss/postcss": "^4.1.11",
    "@types/node": "^24.0.6",
    "@types/pg": "^8.15.4",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "drizzle-kit": "^0.31.4",
    "eslint": "^9.30.0",
    "eslint-config-next": "15.3.4",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.5.1",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.13",
    "shx": "^0.4.0",
    "tailwindcss": "^4.1.11",
    "tw-animate-css": "^1.3.4",
    "typescript": "^5.8.3"
  }
}
